{
  "compilerOptions": {
    "outDir": "./build",
    "module": "esNext",
    "target": "es2020",
    "sourceMap": true,
    "moduleResolution": "node",
    "jsx": "react",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "example"
  ]
}
